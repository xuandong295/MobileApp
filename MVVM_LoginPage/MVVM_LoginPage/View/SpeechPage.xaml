<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM_LoginPage.View.SpeechPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="Background7.jpg">

    <StackLayout Margin="10,450,10,10">
        <Button
            x:Name="start"
            Text="Start"
                Clicked="Start_Clicked" BorderRadius="15" BorderWidth="2"
            IsVisible="true" BackgroundColor="Chocolate"/>
        <Label 
            x:Name="recon"
            Text="Recognized text" 
           HorizontalOptions="Center"
           VerticalOptions="Center" />
        <Button x:Name="stop_btn" IsVisible="false" Clicked="stop_btn_Clicked" BorderRadius="15" BorderWidth="2" BackgroundColor="Chocolate">
            <Button.Text>Done</Button.Text>
        </Button>

    </StackLayout>

</ContentPage>
